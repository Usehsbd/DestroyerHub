-- Criar a tela inicial
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

-- Criar o frame principal
local Frame = Instance.new("Frame")
Frame.Size = UDim2.new(0.5, 0, 0.5, 0)
Frame.Position = UDim2.new(0.25, 0, 0.25, 0)
Frame.BackgroundColor3 = Color3.new(0.2, 0.2, 0.2)
Frame.Parent = ScreenGui

-- Adicionar o título
local Title = Instance.new("TextLabel")
Title.Text = "Key System"
Title.Size = UDim2.new(1, 0, 0.2, 0)
Title.TextScaled = true
Title.TextColor3 = Color3.new(1, 1, 1)
Title.BackgroundColor3 = Color3.new(0, 0, 0)
Title.Parent = Frame

-- Adicionar a text box
local TextBox = Instance.new("TextBox")
TextBox.PlaceholderText = "Insira a chave aqui"
TextBox.Size = UDim2.new(0.8, 0, 0.2, 0)
TextBox.Position = UDim2.new(0.1, 0, 0.3, 0)
TextBox.Parent = Frame

-- Adicionar o botão de verificação
local VerifyButton = Instance.new("TextButton")
VerifyButton.Text = "Verify"
VerifyButton.Size = UDim2.new(0.4, 0, 0.1, 0)
VerifyButton.Position = UDim2.new(0.3, 0, 0.5, 0)
VerifyButton.BackgroundColor3 = Color3.new(0.4, 0.4, 0.4)
VerifyButton.TextColor3 = Color3.new(1, 1, 1)
VerifyButton.Parent = Frame

-- Função a ser executada quando o botão for clicado
VerifyButton.MouseButton1Click:Connect(function()
    local key = TextBox.Text
    if key == "DestUITester" then
        -- Esconder a interface
        ScreenGui:Destroy()
        -- Executar o script
        loadstring(game:HttpGet("https://raw.githubusercontent.com/Usehsbd/DestroyerHub/main/DestroyerHub"))()
    else
        -- Ação a ser executada se a chave estiver incorreta (opcional)
        print("Chave incorreta. Tente novamente.")
    end
end)